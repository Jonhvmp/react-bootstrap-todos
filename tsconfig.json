{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx", // Enable the new JSX Transform
    "baseUrl": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}
